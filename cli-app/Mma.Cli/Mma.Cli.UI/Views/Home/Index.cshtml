@{
    ViewData["Title"] = "Home Page";
   Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SchemaForge</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
            background: #1a1f2e;
            color: #e2e8f0;
            height: 100vh;
            overflow: hidden;
        }

        .app-container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #0f172a;
            border-right: 1px solid #334155;
            display: flex;
            flex-direction: column;
        }

        .header {
            padding: 16px 20px;
            border-bottom: 1px solid #334155;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .logo {
            width: 24px;
            height: 24px;
            background: #3b82f6;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: bold;
            color: white;
        }

        .app-title {
            font-size: 18px;
            font-weight: 600;
            color: #f8fafc;
        }

        .sidebar-section {
            padding: 20px;
        }

        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 16px;
        }

        .section-title {
            font-size: 16px;
            font-weight: 600;
            color: #f8fafc;
        }

        .new-btn {
            background: #1e293b;
            border: 1px solid #475569;
            color: #cbd5e1;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.2s;
        }

        .new-btn:hover {
            background: #334155;
            border-color: #64748b;
        }

        .empty-state {
            text-align: center;
            color: #64748b;
            font-size: 14px;
            line-height: 1.5;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .top-bar {
            height: 60px;
            border-bottom: 1px solid #334155;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 24px;
        }

        .add-table-btn {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: background 0.2s;
        }

        .add-table-btn:hover {
            background: #2563eb;
        }

        .workspace {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #1e293b;
            position: relative;
        }

        .welcome-content {
            text-align: center;
            max-width: 400px;
        }

        .database-icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 24px;
            opacity: 0.6;
        }

        .database-icon svg {
            width: 100%;
            height: 100%;
            fill: #64748b;
        }

        .welcome-title {
            font-size: 24px;
            font-weight: 600;
            color: #f8fafc;
            margin-bottom: 12px;
        }

        .welcome-subtitle {
            color: #94a3b8;
            font-size: 16px;
            line-height: 1.5;
        }

        .user-avatar {
            position: absolute;
            bottom: 20px;
            left: 20px;
            width: 32px;
            height: 32px;
            background: #475569;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: 600;
            color: #e2e8f0;
        }

        /* Icons */
        .icon {
            width: 16px;
            height: 16px;
            fill: currentColor;
        }

        .plus-icon {
            width: 14px;
            height: 14px;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="header">
                <div class="logo">⚡</div>
                <div class="app-title">SchemaForge</div>
            </div>

            <div class="sidebar-section">
                <div class="section-header">
                    <div class="section-title">My Diagrams</div>
                    <button class="new-btn">
                        <svg class="icon plus-icon" viewBox="0 0 24 24">
                            <path d="M12 5v14m-7-7h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                        </svg>
                        New
                    </button>
                </div>

                <div class="empty-state">
                    No diagrams yet. Create one to get started.
                </div>
            </div>

            <div class="user-avatar">N</div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="top-bar">
                <button class="add-table-btn">
                    <svg class="icon plus-icon" viewBox="0 0 24 24">
                        <path d="M12 5v14m-7-7h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    Add Table
                </button>
            </div>

            <div class="workspace">
                <div class="welcome-content">
                    <div class="database-icon">
                        <svg viewBox="0 0 24 24">
                            <ellipse cx="12" cy="5" rx="9" ry="3" />
                            <path d="M3 5v14c0 1.66 4.03 3 9 3s9-1.34 9-3V5" />
                            <path d="M3 12c0 1.66 4.03 3 9 3s9-1.34 9-3" />
                        </svg>
                    </div>

                    <h1 class="welcome-title">Welcome to SchemaForge</h1>
                    <p class="welcome-subtitle">
                        Create a new diagram from the sidebar to start designing your database schema.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Add some interactivity
        document.querySelector('.new-btn').addEventListener('click', function() {
            alert('Create new diagram functionality would go here!');
        });

        document.querySelector('.add-table-btn').addEventListener('click', function() {
            alert('Add table functionality would go here!');
        });

        // Add hover effects and animations
        document.querySelectorAll('button').forEach(button => {
            button.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-1px)';
            });

            button.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>